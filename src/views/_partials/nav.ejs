<style>
  .blueLine {
    border-bottom: #008ed6 3px solid;
    background-color: #343a40;
  }

  body {
    color: #333;
  }
</style>

<!--navbar-->
<nav class="navbar navbar-expand-sm bg-dark navbar-dark" id="main-nav">
  <a href="/" class="navbar-brand">
    <h3 class="d-inline align-middle">SFSU Rent</h3>
  </a>
  <!--navbar collapse toggler button-->
  <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
    <span class="navbar-toggler-icon"></span>
  </button>
  <!--navbar items-->
  <div class="collapse navbar-collapse" id="navbarCollapse">
    <!--serach bar-->
    <div class="d-none d-lg-inline w-50 pt-1 pt-3">
      <%- include('search'); %>
    </div>
    <ul class="navbar-nav ml-auto">
      <!--post-->
      <li class="nav-item">
        <a class="nav-link" href="/create-post">
          <h6>Create Post</h6>
        </a>
      </li>
      <!-- Dashboard -->
      <li class="nav-item">
        <a class="nav-link" href="/dashboard">
          <h6>My Profile</h6>
        </a>
      </li>
      <!--about-->
      <li class="nav-item">
        <a class="nav-link" href="/about">
          <h6>About</h6>
        </a>
      </li>


      <%if (false ) { %>
      <li class="nav-item">
        <a class="nav-link" href="/dashboard">
          <h6>My Profile</h6>
        </a>
      </li>



      <li class="nav-item">
        <a tabindex="0" class="btn btn-lg btn-danger" role="button" data-toggle="popover" data-trigger="focus"
          title="Dismissible popover" data-content="And here's some amazing content. It's very engaging. Right?">My
          Profile</a>
      </li>



      <% }else{ %>
      <!--login/register - triggers modal-->
      <li class="nav-item">
        <a class="nav-link" href="#loginModal" data-toggle="modal" data-target="#loginModal">
          <h6>Login/Register</h6>
        </a>
      </li>
      <% } %>


    </ul>
  </div>
</nav>

<div class="blueLine">
  <div class="d-lg-none">
    <%- include('search'); %>
  </div>
</div>

<!--Modal for login/register-->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel"
  aria-hidden="true">
  <!--modal dialog-->
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="loginModalLabel">Login/Register</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!--Modal Form start-->
        <!--Login-->
        <div class="card text-center card-form">
          <div class="card-body">
            <h3>Login</h3>
            <p>Please fill out this form to login</p>
            <form action="/auth/login/" method="POST">
              <div class="form-group">
                <input name="username" type="email" class="form-control form-control-lg" placeholder="Email" />
              </div>
              <div class="form-group">
                <input name="password" type="password" class="form-control form-control-lg" placeholder="Password" />
              </div>
              <input type="submit" value="Login" class="btn btn-primary btn-block" />
              Forgot Your Password? <a href="#">Click Here</a>
            </form>
          </div>
        </div>
        <p></p>
        <!--register-->
        <div class="card text-center card-form">
          <div class="card-body">
            <h3>Dont have an account?</h3>
            <p>Create an account today!</p>
            <form>
              <a href="/auth/register" class="btn btn-primary btn-block">Register</a>
              <p></p>
            </form>
          </div>
        </div>
        <!--Modal Form end-->
      </div>
    </div>
  </div>
</div>

<script>
  $('.popover-dismiss').popover({
    trigger: 'focus'
  })
</script>