<div class="py-2">
  <button class="btn btn-primary btn-block py-3">Create Post</button>
</div>
<div class=" cardSize card text-center">
  <!--card head-->
  <div class="card-header">
    <strong>Filters</strong>
  </div>
  <form method="post" action="/listing/">
  <!--card body-->
  <div class="card-body">
    <div class="form-check">
      <!--housing type-->
      <div class=" text-left">
        <strong>Housing Type:</strong>
        <!--appartments-->
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            value=""
            id="appartmentCheck"
          />
          <label class="form-check-label" for="appartmentCheck">
            Appartments
          </label>
        </div>
        <!--Houses-->
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            value=""
            id="houseCheck"
          />
          <label class="form-check-label" for="houseCheck">
            Bungalows
          </label>
        </div>
        <!--rooms-->
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            value=""
            id="roomCheck"
          />
          <label class="form-check-label" for="roomCheck">
            Rooms
          </label>
        </div>
        <!--pricing-->
        <p></p>
        <div class="dropdown-divider"></div>
        <p></p>
        <strong>Price Range:</strong>
        <!--min price-->
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">Min $</span>
          </div>
          <input
            name="minPrice"
            type="text"
            class="form-control"
            placeholder="Min price"
            aria-label="Amount (to the nearest dollar)"
            value="<%= FILTER.minPrice %>"
          />
        </div>
        <!--max price-->
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">Max $</span>
          </div>
          <input
            name="maxPrice"
            type="text"
            class="form-control"
            placeholder="Max price"
            aria-label="Amount (to the nearest dollar)"
            value="<%= FILTER.maxPrice %>"
          />
        </div>
        <!--morefilters expanded-->
        <div class="collapse" id="collapseExample">
          <p></p>
          <div class="dropdown-divider"></div>
          <p></p>
          <!--Miles from school-->
          <strong>Miles from Campus</strong>
          <div class="input-group mb-3">
              <div class="input-group-prepend">
                  <span class="input-group-text">Distance:</span>
              </div>
            <input
              name="distance"
              type="text"
              class="form-control"
              placeholder="Miles"
              aria-label="Amount (to the nearest dollar)"
              value="<%= FILTER.distance %>"
            />
          </div>
          <p></p>
          <div class="dropdown-divider"></div>
          <p></p>
          <strong>Bedrooms:</strong>
          <!--Min Bedrooms-->
          <div class="input-group mb-3">
              <div class="input-group-prepend">
                  <span class="input-group-text">Min:</span>
                </div>
            <input
              name="minBedrooms"
              type="text"
              class="form-control"
              placeholder="Min"
              aria-label="Amount (to the nearest dollar)"
              value="<%= FILTER.minBedrooms %>"
            />
          </div>
          <!--Max Bedrooms-->
          <div class="input-group mb-3">
              <div class="input-group-prepend">
                  <span class="input-group-text">Max:</span>
                </div>
            <input
              name="maxBedrooms"
              type="text"
              class="form-control"
              placeholder="Max"
              aria-label="Amount (to the nearest dollar)"
              value="<%= FILTER.maxBedrooms %>"
            />
          </div>
          <p></p>
          <div class="dropdown-divider"></div>
          <p></p>
          <!--Bathrooms-->
          <strong>Bathrooms</strong>
          <!--Min Bathrooms-->
          <div class="input-group mb-3">
              <div class="input-group-prepend">
                  <span class="input-group-text">Min:</span>
                </div>
            <input
              name="minBathrooms"
              type="text"
              class="form-control"
              placeholder="Min"
              aria-label="Amount (to the nearest dollar)"
              value="<%= FILTER.minBathrooms %>"
            />
          </div>
          <!--Max Bathrooms-->
          <div class="input-group mb-3">
              <div class="input-group-prepend">
                  <span class="input-group-text">Max: </span>
                </div>
            <input
              name="maxBathrooms"
              type="text"
              class="form-control"
              placeholder="Max"
              aria-label="Amount (to the nearest dollar)"
              value="<%= FILTER.maxBathrooms %>"
            />
          </div>
        </div>
      </div>
    </div>
    <!--More Filters buttom-->

    <a
      class="btn btn-outline-secondary"
      data-toggle="collapse"
      href="#collapseExample"
      role="button"
      aria-expanded="false"
      aria-controls="collapseExample"
    >
      More Filters
    </a>
  </div>
  <!--card footer-->
  <div class="card-footer text-muted">
    <button type="submit" class="btn btn-warning">Update Filters</button>
    <!--<a href="#" class="btn btn-primary">Search Filter</a>-->
  </div>
  </form>
</div>
