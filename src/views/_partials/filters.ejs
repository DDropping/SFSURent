<div class="py-2">
  <button class="btn btn-primary btn-block py-3">Create Post</button>
</div>
<div class=" cardSize card text-center">
  <!--card head-->
  <div class="card-header">
    <strong>Filters</strong>
  </div>
  <form method="post" action="/listing/">
    <div class="card-body">
      <div class="form-check">
        <!--housing type-->
        <div class=" text-left">
          <!--pricing-->
          <strong>Price Range:</strong>
          <div class="input-group mb-3">
            <!--min price-->
            <div class="input-group-prepend">
              <span class="input-group-text">$</span>
            </div>
            <input
              name="minPrice"
              type="text"
              class="form-control"
              placeholder="Min price"
              aria-label="Amount (to the nearest dollar)"
              value="<%= FILTER.minPrice %>"
            />
            <!--max price-->
            <div class="pr-1"></div>
            <div class="input-group-prepend">
              <span class="input-group-text">$</span>
            </div>
            <input
              name="maxPrice"
              type="text"
              class="form-control"
              placeholder="Max price"
              aria-label="Amount (to the nearest dollar)"
              value="<%= FILTER.maxPrice %>"
            />
          </div>
          <!--morefilters expanded-->
          <div class="collapse" id="collapseExample">
            <p></p>
            <div class="dropdown-divider"></div>
            <p></p>
            <!--Miles from school-->
            <strong>Miles from Campus</strong>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">Distance:</span>
              </div>
              <input
                name="distance"
                type="text"
                class="form-control"
                placeholder="Miles"
                aria-label="Amount (to the nearest dollar)"
                value="<%= FILTER.distance %>"
              />
            </div>
            <p></p>
            <div class="dropdown-divider"></div>
            <p></p>
            <strong>Bedrooms:</strong>
            <!--Min Bedrooms-->
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">Min:</span>
              </div>
              <input
                name="minBedrooms"
                type="text"
                class="form-control"
                placeholder="Min"
                aria-label="Amount (to the nearest dollar)"
                value="<%= FILTER.minBedrooms %>"
              />
              <!--Max Bedrooms-->
              <div class="pr-1"></div>
              <div class="input-group-prepend">
                <span class="input-group-text">Max:</span>
              </div>
              <input
                name="maxBedrooms"
                type="text"
                class="form-control"
                placeholder="Max"
                aria-label="Amount (to the nearest dollar)"
                value="<%= FILTER.maxBedrooms %>"
              />
            </div>
            <p></p>
            <div class="dropdown-divider"></div>
            <p></p>
            <!--Bathrooms-->
            <strong>Bathrooms</strong>
            <!--Min Bathrooms-->
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">Min:</span>
              </div>
              <input
                name="minBathrooms"
                type="text"
                class="form-control"
                placeholder="Min"
                aria-label="Amount (to the nearest dollar)"
                value="<%= FILTER.minBathrooms %>"
              />
              <!--Max Bathrooms-->
              <div class="pr-1"></div>
              <div class="input-group-prepend">
                <span class="input-group-text">Max: </span>
              </div>
              <input
                name="maxBathrooms"
                type="text"
                class="form-control"
                placeholder="Max"
                aria-label="Amount (to the nearest dollar)"
                value="<%= FILTER.maxBathrooms %>"
              />
            </div>
          </div>
        </div>
      </div>
      <!--More Filters buttom-->

      <a
        class="btn btn-outline-secondary"
        data-toggle="collapse"
        href="#collapseExample"
        role="button"
        aria-expanded="false"
        aria-controls="collapseExample"
      >
        More Filters
      </a>
    </div>
    <!--card footer-->
    <div class="card-footer text-muted">
      <button type="submit" class="btn btn-warning">Update Filters</button>
      <!--<a href="#" class="btn btn-primary">Search Filter</a>-->
    </div>
  </form>
</div>
