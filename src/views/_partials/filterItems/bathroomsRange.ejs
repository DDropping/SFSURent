<strong>Bathrooms:</strong>
<!-- Bathrooms: 1 -->
<div class="form-check">
  <input
    class="form-check-input"
    type="checkbox"
    value="bathroom1"
    id="bathroomCheck1"
    name="bath1"
    <%= (typeof body != 'undefined' && typeof body.bath1 != 'undefined')?'checked':'' %>
  />
