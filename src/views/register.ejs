<%- include('_partials/header'); %>

<style>
  #registerFormColor {
    color: #fff;
  }
  .leftTextColor {
    color: #fff;
  }
  #home-section {
    background: url(/images/sfsu_campus.jpg);
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: fixed;
    min-height: 600px;
  }
  #home-section .dark-overlay {
    top: 0;
    left: 0;
    width: 100%;
    height: 600px;
    background: rgba(0, 0, 0, 0.7);
  }

  #home-section .home-inner {
    padding-top: 20px;
  }

  #home-section .card-form {
  }
  #explore-head-section {
    background: #fff;
    color: #333;
  }
</style>

<body>
  <header id="home-section">
    <div class="dark-overlay">
      <div class="home-inner container">
        <div class="row">
          <div class=" leftTextColor col-lg-8 d-none d-lg-block">
            <h1 class="display-4">
              Search for available
              <strong>Houses</strong>, <strong>Appartments</strong>, and
              <strong>Rooms</strong> or List yours for Rent!
            </h1>
            <div class="d-flex">
              <div class="p-4 align-self-start">
                <i class="fas fa-check fa-2x"></i>
              </div>
              <div class="p-4 align-self-end">
                Search all housing options near San Francisco State University
                to find the perfect place for you!
              </div>
            </div>

            <div class="d-flex">
              <div class="p-4 align-self-start">
                <i class="fas fa-check fa-2x"></i>
              </div>
              <div class="p-4 align-self-end">
                Post listings to find the right tenant to rent your house,
                appartment, or room for free!
              </div>
            </div>

            <div class="d-flex">
              <div class="p-4 align-self-start">
                <i class="fas fa-check fa-2x"></i>
              </div>
              <div class="p-4 align-self-end">
                Get in contact quickly and easily with potential renters or
                landlords with our direct messageing service or contact them
                directly!
              </div>
            </div>
          </div>
          <!--form card-->
          <div class="col-lg-4" id="registerFormColor">
            <div class="card bg-primary text-center card-form">
              <div class="card-body">
                <h3>Sign Up Today</h3>
                <p>Please fill out this form to register</p>
                <form>
                  <!--username-->
                  <div class="form-group">
                    <input
                      type="text"
                      class="form-control form-control-lg"
                      placeholder="Username"
                    />
                  </div>
                  <!--email-->
                  <div class="form-group">
                    <input
                      type="email"
                      class="form-control form-control-lg"
                      placeholder="Email"
                    />
                  </div>
                  <!--password-->
                  <div class="form-group">
                    <input
                      type="password"
                      class="form-control form-control-lg"
                      placeholder="Password"
                    />
                  </div>
                  <!--password-->
                  <div class="form-group">
                    <input
                      type="password"
                      class="form-control form-control-lg"
                      placeholder="Confirm Password"
                    />
                  </div>
                  <!--agree to terms and conditions-->
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value=""
                      id="termsAndConditionsCheck"
                    />
                    <label class="form-check-label" for="appartmentCheck">
                      Agree to terms and conditions
                    </label>
                    <p></p>
                  </div>
                  <!--Captcha-->
                  <h5>
                    Are You Human?
                    <button class="btn btn-outline-light">Yes</button>
                  </h5>
                  <!--submit button-->
                  <input
                    type="submit"
                    value="Submit"
                    class="btn btn-outline-light btn-block"
                  />
                  <p></p>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!--EXPLORE HEAD-->
  <section id="explore-head-section">
    <div class="container">
      <div class="row">
        <div class="col text-center py-5">
          <h1 class="display-4">Explore Current Listings</h1>
          <p class="lead">
            Lorem ipsum dolor, sit amet consectetur adipisicing elit. Distinctio
            voluptates labore ut repellat in necessitatibus inventore tenetur
            tempora vero quas?
          </p>
          <a href="/" class="btn btn-outline-secondary">Go To Listings</a>
        </div>
      </div>
    </div>
  </section>
</body>

<footer>
  <%- include('_partials/footer'); %>
</footer>
